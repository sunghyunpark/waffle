<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/cafe_thumb_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/cafe_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#37474F"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/cafe_thumb_img"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/distance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cafe_name_txt"
            android:layout_toRightOf="@+id/cafe_thumb_img"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:textColor="@color/colorGray"
            android:text="13km"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/cafe_thumb_img"
            android:layout_below="@+id/distance_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/full_time_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/full_time_img"/>
            <ImageView
                android:id="@+id/wifi_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:id="@+id/smoke_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:id="@+id/parking_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_above="@+id/layout_divider">

        <LinearLayout
            android:id="@+id/cafe_address_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/location_img"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="서울특별시 금천구 가산동 371"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <!--구분선-->
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#EEEEEE"></LinearLayout>
        <LinearLayout
            android:id="@+id/cafe_phone_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.5">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/phone_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="02-342-3231"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <!--구분선-->
    <LinearLayout
        android:id="@+id/layout_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"></LinearLayout>
</RelativeLayout>
