<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/blog_layout">

    <TextView
        android:id="@+id/blog_num_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/blog_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/blog_num_txt"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_alignTop="@+id/blog_num_txt"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/blog_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blog_num_txt"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorSky"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blog_name_txt"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:textColor="@color/colorTextHintGray"
        android:text="NAVER"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/post_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/blog_name_txt"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorTextHintGray"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/description_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_date_txt"
        android:padding="10dp"/>

    <!--구분선-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"></LinearLayout>
</RelativeLayout>
