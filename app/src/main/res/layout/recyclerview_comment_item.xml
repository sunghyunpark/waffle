<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/user_profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_profile_img"
        android:text="name"
        android:layout_alignTop="@+id/user_profile_img"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/updated_at_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-10-23 22:33:22"
        android:textColor="@color/colorTextHintGray"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/comment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_txt"
        android:layout_toRightOf="@+id/user_profile_img"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>
