<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yssh.waffle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="view.IntroActivity" />
        <activity android:name="view.EmailRegisterActivity" />
        <activity android:name="view.EmailLoginActivity" />
        <activity android:name="view.AboutCafeActivity" />
        <activity android:name="view.ImageViewer" />
        <activity android:name="view.WriteCommentActivity" />
        <activity android:name="view.ImageCropActivity" />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity android:name="view.AboutCafeCommentActivity" />
        <activity android:name="view.MyFavoriteCafeActivity" />
        <activity android:name="view.MyCommentCafeActivity" />
        <activity android:name="view.EditUserProfileActivity" />
        <activity
            android:name="view.AllCommentActivity"
            android:label="@string/title_activity_all_comment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>